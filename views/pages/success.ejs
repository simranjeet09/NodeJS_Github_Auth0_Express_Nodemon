<!doctype html>
<html>
  <head>
    <title>Github Oauth</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <style>
          body        { padding-top:100px; }
      </style>
  </head>
  <body>
    <div class="container">
      <div class=" text-center">
          <h1 class="text-center"></span>Welcome to the app</h1><br><br>
          <div class="column">
            <div class="text-center">
                <img class="rounded-circle" width="200" height="200"src= <%= userData.avatar_url %>/> 
              </div>
              <br>
             
              <div class="well text-center">
                
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Company</th>
                        <th scope="col">Bio</th>
                        <th scope="col">Location</th>
                        <th scope="col">Public Repo</th>
                        <th scope="col">Followers</th>
                        <th scope="col">Following</th>

                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td> <%= userData.name??"N/a" %></td>
                        <td><%= userData.company ??"N/a"%></td>
                        <td><%= userData.bio ??"N/a"%></td>
                        <td><%= userData.location ??"N/a"%></td>
                        <td><%= userData.public_repos ??"N/a"%></td>
                        <td><%= userData.followers ??"N/a"%></td>
                        <td><%= userData.following ??"N/a"%></td>

                      </tr>
                     
                    </tbody>
                  </table>
                <a class="button is-danger"  href="/logout"><u>Logout</u></a>

             
            </div>
        </div>
      </div>
    </div>
  </body>
</html>